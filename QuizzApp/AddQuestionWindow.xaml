<Window x:Class="QuizzApp.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzApp"
        mc:Ignorable="d"
      Title="Добавить вопрос" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Викторина:" Margin="0,0,0,5"/>
            <ComboBox x:Name="CbQuizzes" DisplayMemberPath="Title"/>

            <TextBlock Text="Вопрос:" Margin="0,10,0,5"/>
            <TextBox x:Name="TbQuestion" Height="60"/>

            <TextBlock Text="Правильный ответ:" Margin="0,10,0,5"/>
            <TextBox x:Name="TbCorrect"/>

            <TextBlock Text="Неправильные ответы (по одному на строку):" Margin="0,10,0,5"/>
            <TextBox x:Name="TbIncorrect" AcceptsReturn="True" Height="80"/>
        </StackPanel>

        <Button Grid.Row="1" Content="Сохранить" Click="BtnSave_Click" HorizontalAlignment="Right" Width="100"/>
    </Grid>
</Window>
