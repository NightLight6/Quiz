<Window x:Class="QuizzApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzApp"
        mc:Ignorable="d"
     Title="Викторины" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Новая викторина" Click="BtnNewQuiz_Click" Margin="0,0,10,0"/>
            <Button Content="Добавить вопрос" Click="BtnAddQuestion_Click" Margin="0,0,10,0"/>
            <Button Content="Удалить викторину" Click="BtnDeleteQuiz_Click" Margin="0,0,10,0"/>
            <Button Content="Экспорт в JSON" Click="BtnExport_Click" Margin="0,0,10,0"/>
            <Button Content="Импорт из JSON" Click="BtnImport_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="265.8"/>
                <ColumnDefinition Width="34.2"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListView x:Name="LvQuizzes" SelectionChanged="LvQuizzes_SelectionChanged" Grid.ColumnSpan="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ListView x:Name="LvQuestions" Grid.Column="2" MouseDoubleClick="LvQuizzes_MouseDoubleClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding QuestionText}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Редактировать вопрос" Click="EditQuestion_Click"/>
                        <MenuItem Header="Удалить вопрос" Click="DeleteQuestion_Click"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </Grid>
    </Grid>
</Window>
